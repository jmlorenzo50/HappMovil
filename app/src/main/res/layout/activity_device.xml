<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="happ.es.happ.DeviceActivity">



    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        android:background="#FFFFFF"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <!-- Sexo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="#FFFFFF"
            >


            <ImageView
                android:id="@+id/btnMan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:onClick="selectedMan"
                app:srcCompat="@drawable/happ_man_on" />


            <ImageView
                android:id="@+id/btnWoman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:onClick="selectedWoman"
                app:srcCompat="@drawable/happ_woman_off" />


        </LinearLayout>

        <!-- Edad -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/edad"
                android:textColor="@color/colorTitulo"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"/>

            <EditText
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/colorTitulo"
                android:background="@color/colorPanelControl"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_weight="5"/>

        </LinearLayout>

        <!-- Estado civil-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="#FFFFFF"
            >


            <ImageView
                android:id="@+id/btnState1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="3px"
                android:onClick="selectedState1"
                app:srcCompat="@drawable/estado_civil_1_on" />


            <ImageView
                android:id="@+id/btnState2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="3px"
                android:onClick="selectedState2"
                app:srcCompat="@drawable/estado_civil_2_off" />

            <ImageView
                android:id="@+id/btnState3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="3px"
                android:onClick="selectedState3"
                app:srcCompat="@drawable/estado_civil_3_off" />

            <ImageView
                android:id="@+id/btnState4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layout_margin="3px"
                android:onClick="selectedState4"
                app:srcCompat="@drawable/estado_civil_4_off" />

        </LinearLayout>


        <!-- Nivel educativo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nivelEducativo"
                android:textColor="@color/colorTitulo"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/educationLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:drawable/btn_dropdown"
                android:textColor="@color/colorTitulo"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:spinnerMode="dropdown"
                android:layout_weight="4" />

        </LinearLayout>




        <!-- BotÃ³n -->
        <TextView
            android:id="@+id/btnContinuar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif"
            android:text="@string/continuar"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/boton_largo_amarillo"
            android:onClick="continuar"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
