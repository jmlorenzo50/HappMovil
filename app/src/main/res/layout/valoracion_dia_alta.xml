<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:showIn="@layout/valoracion_dia_bar">

<LinearLayout
    android:id="@+id/realizar_valoracion"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:orientation="vertical"
    >



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif"
        android:text="@+id/instrucciones_agradecimiento"
        android:textAlignment="viewStart"
        android:textColor="#696969"
        android:textSize="12dp"
        />


    <!-- Valoración 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blanco"
        android:layout_margin="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif"
            android:text="1."
            android:textAlignment="viewStart"
            android:textColor="#696969"
            android:textSize="12dp"
            />

        <EditText
            android:id="@+id/valoracion_dia_texto1"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"
            android:background="@color/colorValoracionDia"
            android:paddingRight="10dp"/>

    </LinearLayout>



    <!-- Valoración 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blanco"
        android:layout_margin="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif"
            android:text="2."
            android:textAlignment="viewStart"
            android:textColor="#696969"
            android:textSize="12dp"
            />

        <EditText
            android:id="@+id/valoracion_dia_texto2"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"
            android:background="@color/colorValoracionDia"
            android:paddingRight="10dp"/>

    </LinearLayout>


    <!-- Valoración 3 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blanco"
        android:layout_margin="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif"
            android:text="3."
            android:textAlignment="viewStart"
            android:textColor="#696969"
            android:textSize="12dp"
            />

        <EditText
            android:id="@+id/valoracion_dia_texto3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"
            android:background="@color/colorValoracionDia"
            android:paddingRight="10dp"/>

    </LinearLayout>


    <!-- Valoración 4 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blanco"
        android:layout_margin="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif"
            android:text="4."
            android:textAlignment="viewStart"
            android:textColor="#696969"
            android:textSize="12dp"
            />

        <EditText
            android:id="@+id/valoracion_dia_texto4"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"
            android:background="@color/colorValoracionDia"
            android:paddingRight="10dp"/>

    </LinearLayout>

    <!-- Valoración 5 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/blanco"
        android:layout_margin="5dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="sans-serif"
            android:text="5."
            android:textAlignment="viewStart"
            android:textColor="#696969"
            android:textSize="12dp"
            />

        <EditText
            android:id="@+id/valoracion_dia_texto5"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:inputType="text"
            android:background="@color/colorValoracionDia"
            android:paddingRight="10dp"/>

    </LinearLayout>





    <!-- Botón -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:fontFamily="sans-serif"
        android:text="@string/guardar"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/boton_largo_valoracion_dia"
        android:onClick="darAlta"/>



</LinearLayout>




</FrameLayout>